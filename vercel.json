{
  "buildCommand": "cd dashboard && npm install && npm run build",
  "outputDirectory": "dashboard/dist",
  "installCommand": "npm install --prefix dashboard && pip install -r requirements.txt",
  "devCommand": "cd dashboard && npm run dev",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron-refresh",
      "schedule": "0 0 * * *"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  }
}
